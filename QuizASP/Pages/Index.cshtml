@page
@model IndexModel
@{
    ViewData["Title"] = "Kezdőlap";
}
<br />
<div class="container-fluid row p-0 m-0">
    <div class="col-sm-12">
        <div class="card bg-success mb-3 w-100">
            <div class="card-header text-white text-xl-left">
                <h2>Kérdések</h2>
            </div>
            <div class="card-body text-center">
                <form method="post">
                    @if (Model.Kerdesek.Count() > 0)
                    {
                        <table class="table table-dark table-hover table-striped">
                            <tr>
                                <th>Kérdés</th>
                                <th>A</th>
                                <th>B</th>
                                <th>C</th>
                                <th>D</th>
                                <th>Törlés</th>
                            </tr>
                            @foreach (var item in Model.Kerdesek)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(m => item.Kerdes)
                                    </td>
                                    <td id="valaszA+@item.Kerdes_id" style="cursor:pointer" onclick="helyesE('@item.Valasz_A', '@item.Helyes','valaszA+@item.Kerdes_id')">
                                        @Html.DisplayFor(m => item.Valasz_A)
                                    </td>
                                    <td id="valaszB+@item.Kerdes_id" style="cursor:pointer" onclick="helyesE('@item.Valasz_B', '@item.Helyes', 'valaszB+@item.Kerdes_id')">
                                        @Html.DisplayFor(m => item.Valasz_B)
                                    </td>
                                    <td id="valaszC+@item.Kerdes_id" style="cursor:pointer" onclick="helyesE('@item.Valasz_C', '@item.Helyes', 'valaszC+@item.Kerdes_id')">
                                        @Html.DisplayFor(m => item.Valasz_C)
                                    </td>
                                    <td id="valaszD+@item.Kerdes_id" style="cursor:pointer" onclick="helyesE('@item.Valasz_D', '@item.Helyes', 'valaszD+@item.Kerdes_id')">
                                        @Html.DisplayFor(m => item.Valasz_D)
                                    </td>
                                    <td>
                                        <button asp-page-handler="Delete" asp-route-id="@item.Kerdes_id" onclick="return confirm('Biztos törölni szeretné ezt a kérdést?')" class="btn btn-danger btn-sm">Töröl</button>
                                        <a asp-page="Modosit" asp-route-id="@item.Kerdes_id" class="btn btn-success btn-sm text-white">Módosít</a>
                                    </td>
                                </tr>
                            }
                        </table>
                        <div class="col-3">
                            <a asp-page="Letrehoz" class="btn btn-info form-control text-white btn-lg">Új kérdés hozzáadása</a>
                        </div>
                    }
                    else
                    {
                        <p><strong>Nincs adat</strong></p>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/site.js"></script>
}